---
import siteDetails from '../config/siteDetails';
---

<footer class="bg-primary text-white py-12 md:py-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <div>
        <h3 class="text-xl font-heading font-bold mb-4">Contact Information</h3>
        <p class="mb-2">Available 24/7</p>
        <p class="mb-2">
          <a href={`tel:${siteDetails.phone.replace(/\D/g, '')}`} class="hover:underline">
            {siteDetails.phone}
          </a>
        </p>
        {siteDetails.address.street && (
          <p class="text-gray-300 text-sm">
            {siteDetails.address.street}<br />
            {siteDetails.address.city}, {siteDetails.address.state} {siteDetails.address.zip}
          </p>
        )}
        <p class="text-gray-400 text-sm mt-2">
          Operated by {siteDetails.companyName}
        </p>
      </div>
      
      <div>
        <h3 class="text-xl font-heading font-bold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/services" class="text-gray-300 hover:text-white transition">
              Our Services
            </a>
          </li>
          <li>
            <a href="/obituaries" class="text-gray-300 hover:text-white transition">
              Obituaries
            </a>
          </li>
          <li>
            <a href="/contact" class="text-gray-300 hover:text-white transition">
              Contact Us
            </a>
          </li>
        </ul>
      </div>
      
      <div>
        <h3 class="text-xl font-heading font-bold mb-4">Connect</h3>
        {Object.keys(siteDetails.socialLinks).length > 0 ? (
          <ul class="space-y-2 text-gray-300">
            {siteDetails.socialLinks.facebook && (
              <li>
                <a href={siteDetails.socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  Facebook
                </a>
              </li>
            )}
            {siteDetails.socialLinks.twitter && (
              <li>
                <a href={siteDetails.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  Twitter
                </a>
              </li>
            )}
            {siteDetails.socialLinks.linkedin && (
              <li>
                <a href={siteDetails.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  LinkedIn
                </a>
              </li>
            )}
            {siteDetails.socialLinks.instagram && (
              <li>
                <a href={siteDetails.socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  Instagram
                </a>
              </li>
            )}
          </ul>
        ) : (
          <p class="text-gray-400 text-sm">Follow us on social media</p>
        )}
      </div>
    </div>
    
    <div class="border-t border-white/20 pt-8 text-center text-white/70 text-sm">
      <p>&copy; {new Date().getFullYear()} {siteDetails.companyName}. All rights reserved.</p>
    </div>
  </div>
</footer>

